// Construct and build the program
add		vert_script		ui_testbed.vert
add		frag_script		ui_testbed.frag
compile

// Vertex Buffer input mappings
input	pos			uv0

// Matrix stack uniform mappings
matrix	modelview	inMatMV
matrix	projection	inMatP

// Globals to uniform mappings
global	tint		inTint
global	timeTable	inTime
global	mouseInfo	inMouse

// Locals
local	tex			inTex		0
local	vec2		inBlend		1		1
local	vec2		inRateA		0.5		0.25
local	vec2		inRateB		0.25	0.25

