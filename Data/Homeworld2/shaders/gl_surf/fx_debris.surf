protect
	blendOps
	depthWrite
	depthFunc
	cull
	fill

local	tex			FX_diffuse		default_white
local	tex			FX_glow		default_black
local	tex			FX_spec		default_black
local	tex			FX_progress	default_white
local	tex			FX_normal		default_normal

local	float2		FX_fadeInfo	0		0

// Blend range, low progress, high progress
local	float3		FX_fadeWindow	0.1		0.1		1.0

// Fade Delta Mult Glow, Fade Burn Glow?
local	float4		FX_glowStyle	0.0		1.0		0		0

layer
	program fx_debris
	
	blendOps one zero
	depthWrite 1
	depthFunc less
	cull none
	fill poly
	
	alias	FX_diffuse		inTexDiff
	alias	FX_glow			inTexGlow
	alias	FX_spec			inTexSpec
	alias	FX_progress		inTexProgress
	alias	FX_normal		inTexNorm

	alias	FX_fadeInfo		inFadeInfo

	alias	FX_fadeWindow	inFadeWindow
	alias	FX_glowStyle	inGlowStyle
